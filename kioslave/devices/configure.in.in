AC_MSG_CHECKING([whether devices kioslave should be compiled])

case `uname -s` in
    FreeBSD)
        DEVICESDIR=devices
        ;;
    Linux)
        DEVICESDIR=devices
        ;;
    *)
        DEVICESDIR=
        ;;
esac

AC_SUBST(DEVICESDIR)
if test x$DEVICESDIR != x; then
    AC_MSG_RESULT([yes])
else
    AC_MSG_RESULT([no])
fi

AM_CONDITIONAL(include_devicesdir, test -n "$DEVICESDIR")

AC_CHECK_FUNCS(setmntent)
